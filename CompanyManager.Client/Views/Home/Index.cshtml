@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CompanyManager.Client.Models.CompanyViewModel>  

@foreach (var company in Model)
{
    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <form asp-action="RenameCompany" method="post" class="d-inline">
                <input type="hidden" name="companyId" value="@company.Id" />
                <span contenteditable="true" onblur="this.form.submit()" class="form-control" style="display:inline-block; width: auto; border: none; cursor: text;">
                    @company.Name
                </span>
            </form>
            <div>
                <form asp-action="CreateDepartment" method="post" class="d-inline">
                    <input type="hidden" name="companyId" value="@company.Id" />
                    <button type="submit" class="btn btn-success" title="Добавить отделение">
                        <i class="fas fa-plus"></i>
                    </button>
                </form>

                <form asp-action="DeleteCompany" method="post" class="d-inline">
                    <input type="hidden" name="companyId" value="@company.Id" />
                    <button type="submit" class="btn btn-danger" title="Удалить компанию">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </div>
        </div>

        <ul class="list-group">
            @foreach (var department in company.Departments)
            {
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>@department.Name</strong>
                        <div>
                            <form asp-action="CreateDivision" method="post" class="d-inline">
                                <input type="hidden" name="companyId" value="@company.Id"/>
                                <input type="hidden" name="departmentId" value="@department.Id"/>
                                <button type="submit" class="btn btn-success btn-sm" title="Добавить отделение">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </form>
                            <form asp-action="DeleteDepartment" method="post" class="d-inline">
                                <input type="hidden" name="companyId" value="@company.Id"/>
                                <input type="hidden" name="departmentId" value="@department.Id"/>
                                <button type="submit" class="btn btn-danger btn-sm" title="Удалить департамент">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                            <form asp-action="MoveDepartment" method="post" class="d-inline">
                                <input type="hidden" name="companyId" value="@company.Id"/>
                                <input type="hidden" name="departmentId" value="@department.Id"/>
                                <input type="hidden" name="direction" value="up"/>
                                <button type="submit" class="btn btn-secondary btn-sm" title="Переместить вверх">
                                    <i class="fas fa-arrow-up"></i>
                                </button>
                            </form>
                            <form asp-action="MoveDepartment" method="post" class="d-inline">
                                <input type="hidden" name="companyId" value="@company.Id"/>
                                <input type="hidden" name="departmentId" value="@department.Id"/>
                                <input type="hidden" name="direction" value="down"/>
                                <button type="submit" class="btn btn-secondary btn-sm" title="Переместить вниз">
                                    <i class="fas fa-arrow-down"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <ul class="list-group mt-2">
                        @foreach (var division in department.Divisions)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @division.Name
                                <div>
                                    <form asp-action="DeleteDivision" method="post" class="d-inline">
                                        <input type="hidden" name="companyId" value="@company.Id" />
                                        <input type="hidden" name="departmentId" value="@department.Id"/>
                                        <input type="hidden" name="divisionId" value="@division.Id"/>
                                        <button type="submit" class="btn btn-danger btn-sm" title="Удалить отделение">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                    <div class="d-inline">
                                        <form asp-action="MoveDivision" method="post" class="d-inline">
                                            <input type="hidden" name="companyId" value="@company.Id" />
                                            <input type="hidden" name="departmentId" value="@department.Id"/>
                                            <input type="hidden" name="divisionId" value="@division.Id"/>
                                            <input type="hidden" name="direction" value="up"/>
                                            <button type="submit" class="btn btn-secondary btn-sm" title="Переместить вверх">
                                                <i class="fas fa-arrow-up"></i>
                                            </button>
                                        </form>
                                        <form asp-action="MoveDivision" method="post" class="d-inline">
                                            <input type="hidden" name="companyId" value="@company.Id" />
                                            <input type="hidden" name="departmentId" value="@department.Id"/>
                                            <input type="hidden" name="divisionId" value="@division.Id"/>
                                            <input type="hidden" name="direction" value="down"/>
                                            <button type="submit" class="btn btn-secondary btn-sm" title="Переместить вниз">
                                                <i class="fas fa-arrow-down"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
}

<h2 class="mt-4">Экспорт и импорт</h2>
<form asp-action="CreateCompany" method="post" class="d-inline">
    <button type="submit" class="btn btn-success">Создать компанию</button>
</form>
<h2 class="mt-4">Экспорт и импорт</h2>
<form asp-action="ExportToXml" method="post" class="d-inline">
    <button type="submit" class="btn btn-success">Экспортировать в XML</button>
</form>
<form asp-action="ImportFromXml" method="post" enctype="multipart/form-data" class="d-inline">
    <button type="submit" class="btn btn-info">Импортировать из XML</button>
    <input type="file" name="file" required class="form-control-file d-inline" />
</form>